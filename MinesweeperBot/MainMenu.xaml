<Window x:Class="MinesweeperBot.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainMenu" Width="300" Height="150">
    <StackPanel>

        <Button Content="Open Simulator" Click="ComputerSimulationClicked"/>
        <StackPanel Orientation="Horizontal">
            <Label Content="Column Count" Width="100" />
            <TextBox Name="ColumnCount" Height="22" TextWrapping="Wrap" Width="180" Text="30"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Row Count" Width="100" />
            <TextBox Name="RowCount" Height="22" TextWrapping="Wrap" Width="180" Text="16"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Bomb Count" Width="100" />
            <TextBox Name="BombCount" Height="22" TextWrapping="Wrap" Width="180" Text="99"/>
        </StackPanel>
    </StackPanel>
</Window>
